<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Editing <%=location.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/locations/<%=location._id%>?_method=PUT" method="post">
            <div class="form-group">
                <label for="location[name]">Post Title</label>
                <input class="form-control" type="text" name="location[name]" value="<%=location.name%>">
            </div>
            <div class="form-group">
                <label for="location[price]">Cost</label>
                <input class="form-control" type="number" name="location[price]" value="<%= location.price %>" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="location[location]">Location</label>
                <input class="form-control" type="text" name="location" id="location[location]" value="<%= location.location %>">
            </div>
            <div class="form-group">
                <label for="location[image]">Image URL</label>
                <input class="form-control" type="text" name="location[image]" value="<%=location.image%>">
            </div>
            <div class="form-group">
                <label for="location[description]">Description</label>
                <input class="form-control" type="text" name="location[description]" value="<%=location.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>