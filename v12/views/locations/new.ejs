<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Create a new location</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/locations" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Yosemite">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="price" placeholder="9.95" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" placeholder="https://source.unsplash.com/TCCCKgdFmBo">
            </div>
            <div class="form-group">
                <label for="desription">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/locations">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
